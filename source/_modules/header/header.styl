.header 
  width 100%
  height 50px
  background-color #303030
  
  .header__m-cartTrigger
    display inline-block
    width 100%
    max-width 350px
    float right
    position relative
    
    .fa-shopping-cart
      display block
      height 50px
      width 65px
      text-align center
      font-size 20px
      color white
      line-height 50px
      transition .1s all
      float right
      clear both 
      cursor pointer
      
      &.active
        background-color white
        color #303030